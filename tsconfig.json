{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./src",
      "lib": ["es2017"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"]
}